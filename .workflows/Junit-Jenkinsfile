pipeline {
    agent any

    tools {
        jdk 'jdk17'
        maven 'Maven3'
    }

    stages {
        stage('Run JUnit Tests') {
            steps {
                dir('Serveur') {
                    sh 'mvn test'
                }
            }
            post {
                success {
                    // Déclenche Build-Pipeline si tous les tests passent
                    build job: 'Build-Jenkins', wait: false
                }
                always {
                    // Publie les résultats JUnit dans Jenkins
                    junit 'Serveur/target/surefire-reports/*.xml'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Tous les tests JUnit sont passés'
        }
        failure {
            echo '❌ Des tests ont échoué'
        }
    }
}
